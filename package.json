{
  "name": "signature-as-a-service",
  "version": "1.0.0",
  "description": "An API that serves unhinged email signatures across three tiers: Unbothered, Unhinged, and Unleashed",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "start": "node --experimental-strip-types index.ts",
    "dev": "node --watch --experimental-strip-types index.ts",
    "build": "tsc --noEmit false --outDir dist && node scripts/fix-imports.js"
  },
  "keywords": [
    "api",
    "email",
    "signatures",
    "express",
    "typescript"
  ],
  "author": "Burlet Mederic <mederic.burlet@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.18.0"
  }
}
